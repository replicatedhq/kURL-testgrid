{
  "compilerOptions": {
    "allowJs": true,
    "module": "commonjs",
    "target": "es5",
    "sourceMap": true,
    "experimentalDecorators": true,
    "outDir": "dist",
    "pretty": true,
    "jsx": "react",
    "skipLibCheck": true,
    "lib": [
      "dom",
      "scripthost",
      "es5",
      "es2015"
    ]
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "typings/browser.d.ts",
    "typings/browser",
    "node_modules/**/*",
    "typings"
  ],
  "typeAcquisition": {
    "enable": true
  }  
}
